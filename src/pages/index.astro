---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav';
import WhoWeAre from '../components/home/WhoWeAre.astro';
import Home from '../components/home/Home'
import img1 from '/home_images/img1.jpg'
---
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>UCSB SAE</title>
</head>

<body>
	<div class="relative">
		<div class="fixed z-50 w-screen">
			<Nav currentPage={"Home"} client:visible />
		</div>
			<Home client:only='react' />
			<div class="bg-about-boxes p-16 w-full h-[50rem] flex flex-row">
				<div class="rounded-3xl p-2 mx-8 h-full flex-1 flex flex-col bg-box">
					<div class="rounded-3xl w-full h-2/5 bg-green-300"><img class='rounded-3xl object-cover w-full h-full' src={img1} alt=""></div>
					<div class="w-full h-3/5 flex flex-col justify-center">
						<div class="text-3xl text-white w-full h-3/5 flex flex-row">
							<div class="w-1/5 h-full"></div>
							<div class="w-3/5 h-full"><p class="w-full h-full break-words">testtesttesttesttesttesttesttesttesttest</p>
						</div>
							<div class="w-1/5 h-full"></div>
							</div>
					</div>
				</div>	
				<div class="rounded-3xl mx-8 h-full flex-1 flex flex-col bg-box"></div>	
				<div class="rounded-3xl mx-8 h-full flex-1 flex flex-col bg-box"></div>	
			</div>
		<WhoWeAre />
		<Footer />
	</div>
</body>

</html>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap');

	body {
		background-color: rgb(17, 24, 39);
	}

	h1 {
		font-size: 1.5rem;
	}
</style>
