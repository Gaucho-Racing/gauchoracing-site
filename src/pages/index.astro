---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav';
import WhoWeAre from '../components/home/WhoWeAre.astro';
import Home from '../components/home/Home'
import ContentCards from '../components/home/ContentCards';
---
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>UCSB SAE</title>
</head>

<body>
	<div class="relative">
		<div class="fixed z-50 w-screen">
			<Nav currentPage={"Home"} client:visible />
		</div>
			<Home client:only='react' />
		<ContentCards client:idle/>
		<WhoWeAre />
		<Footer />
	</div>
</body>

</html>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap');

	body {
		background-color: rgb(17, 24, 39);
	}

	h1 {
		font-size: 1.5rem;
	}
</style>
