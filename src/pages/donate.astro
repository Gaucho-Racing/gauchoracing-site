---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav";
import "../styles/Donate.scss"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>Donate!</title>
	</head>
	<body>
		<div class="relative">
			<div class="fixed z-50 w-screen">
				<Nav currentPage={"Donate"} client:visible />
			</div>
			<div class="w-full h-screen bg-navy flex flex-col justify-center">
				<!-- this is the container of the donate text and the donate button -->
				<div class="w-full h-2/5 flex flex-row justify-center">
				<!-- the content in each box is centered using css grid -->
					<div
						class="bg-donatebox text-white rounded-2xl w-full md:w-1/3 h-full grid place-content-center"
					>
						<div class="mx-4 grid place-content-center">
							<h1 class="my-2 text-xl md:text-2xl">Donate!</h1>
							<p class="text-md md:text-lg">
								All donations are greatly appreciated and will
								be used to directly fund our Gaucho Racing
								Project. Whether it is fueling us with pizza or
								paying for our tires, your donations help this
								all possible! All donors will be added to the
								donor wall on the Our Sponsors page.
							</p>
						</div>
						<div class="my-8 grid place-content-center">
							<a href={"https://www.paypal.com/donate/?business=ZN34YGJKW3AC4&no_recurring=0&item_name=All+donations+are+greatly+appreciated+and+will+be+used+to+directly+fund+our+Gaucho+Racing+Project.+&currency_code=USD"} class="cursor-pointer bg-cyan rounded-md p-4">Click Here To Donate</a>
						</div>
					</div>
				</div>
				<!-- <div class='flex-none shrink-0 w-1/2 lg:w-1/3 h-full'> -->
				<!--     <img class='py-2 object-contain h-full w-full'/> -->
				<!-- </div> -->
			</div>
			<Footer />
		</div>
	</body>
</html>
